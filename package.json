{
    "name": "coquo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "prisma:studio": "npx dotenv -e .env.local -- prisma studio",
        "prisma:gen": "npx dotenv -e .env.local -- prisma generate",
        "prisma:reset": "npx dotenv -e .env.local -- prisma migrate reset",
        "prisma:migrate": "npx dotenv -e .env.local -- prisma migrate dev --name",
        "db:seed": "npx dotenv -e .env.local -- prisma db seed",
        "db:pull": "npx dotenv -e .env.local -- prisma db pull",
        "docker:build": "docker build -t coquo .",
        "docker:run": "docker-compose down && docker compose up -d",
        "build:prod": "dotenv -e .env.local -- prisma generate && next build",
        "start:prod": "npx prisma migrate deploy && node server.js"
    },
    "prisma": {
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    },
    "dependencies": {
        "@heroicons/react": "^2.1.4",
        "@hookform/resolvers": "^3.9.0",
        "@prisma/client": "5.21.1",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.3",
        "bcryptjs": "^2.4.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "crypto-js": "^4.2.0",
        "dotenv-cli": "^7.3.0",
        "lucide-react": "^0.453.0",
        "next": "15.0.0",
        "next-auth": "^5.0.0-beta.25",
        "prisma": "5.21.1",
        "react": "19.0.0-rc-65a56d0e-20241020",
        "react-dom": "19.0.0-rc-65a56d0e-20241020",
        "react-hook-form": "^7.53.1",
        "tailwind-merge": "^2.5.4",
        "tailwindcss-animate": "^1.0.7",
        "vaul": "^1.1.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "postcss": "^8",
        "prettier": "^3.1.0",
        "tailwindcss": "^3.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    }
}
